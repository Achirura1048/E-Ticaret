@model Category
@if(TempData["Success"] != null){
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}
<form method="post">
    <div class="border p-3 mt-4 text-white mb-3">
        <div class="row pb-2">
            <h1 class="text-white">Kategori Oluştur</h1>
            </hr>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control border-2 bg-black text-white" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control border-2 bg-black text-white" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary bg-black" style="width:150px">Oluştur</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-primary bg-black" style="width:150px">
        Listeye Dön
    </a>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    
}