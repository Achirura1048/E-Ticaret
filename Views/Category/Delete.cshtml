@{
    ViewData["Title"] = "Delete";
}
@model Category

<form method="post">
    <div class="border p-3 mt-4 text-white mb-3">
        <div class="row pb-2">
            <h1 class="text-white">Kategoriyi Sil</h1>
            </hr>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled type="text" class="form-control border-2 bg-black text-white" />

        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled type="text" class="form-control border-2 bg-black text-white" />

        </div>
    </div>

    <button type="submit" class="btn btn-danger" style="width:150px">Sil</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-primary bg-black" style="width:150px">
        Listeye Dön
    </a>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}